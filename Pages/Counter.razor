@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<VirtualList Items="@Rows" TItem="Row">
    <RowTemplate>
        <p>@context.PetId</p>
        <p>@context.Name</p>
    </RowTemplate>
</VirtualList>

@code {

    class Row
    {
        public string PetId { get; set; } = "unset";
        public string Name { get; set; } = "unser";
    }

    IList<Row> Rows = new List<Row>();

    protected override void OnParametersSet()
    {
        for (int i = 0; i < 1000; i++)
            Rows.Add(new Row {PetId = $"x{i.ToString()}", Name = $"y{i.ToString()}"});
    }

    int currentCount = 0;

    void IncrementCount()
    {
        currentCount++;
    }
}
